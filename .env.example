# Logging Configuration for Ferragate

# Log level (trace, debug, info, warn, error)
RUST_LOG=info

# JSON format logging (true/false)
LOG_JSON=false

# Log to file (true/false)
LOG_TO_FILE=true

# Directory for log files
LOG_DIR=logs

# Log file prefix
LOG_FILE_PREFIX=ferragate

# Include file and line numbers in logs (true/false)
LOG_INCLUDE_LOCATION=false

# Example configurations for different environments:

# Development
# RUST_LOG=debug
# LOG_JSON=false
# LOG_TO_FILE=true
# LOG_INCLUDE_LOCATION=true

# Production
# RUST_LOG=info
# LOG_JSON=true
# LOG_TO_FILE=true
# LOG_INCLUDE_LOCATION=false

# Testing
# RUST_LOG=trace
# LOG_JSON=false
# LOG_TO_FILE=false
# LOG_INCLUDE_LOCATION=true
